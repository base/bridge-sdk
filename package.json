{
  "name": "@base-markets/bridge-sdk",
  "version": "0.1.0",
  "description": "Composable cross-chain bridge SDK for Base Markets integrations.",
  "type": "module",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./chains": {
      "types": "./dist/types/chains/index.d.ts",
      "import": "./dist/chains/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && bun run types && bun build ./src/index.ts --outdir dist --target node --format esm --external bun && bun build ./src/chains/index.ts --outdir dist/chains --target node --format esm --external bun",
    "types": "tsc -p tsconfig.build.json",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "dev": "bun --hot ./index.ts"
  },
  "keywords": [
    "bridge",
    "sdk",
    "base",
    "cross-chain",
    "defi"
  ],
  "author": "Base",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "1.3.2",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@solana-program/token": "0.9.0",
    "@solana/kit": "5.0.0",
    "viem": "2.39.2"
  }
}
