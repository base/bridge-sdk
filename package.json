{
  "name": "@base-markets/bridge-sdk",
  "version": "0.1.0",
  "description": "Composable cross-chain bridge SDK for Base Markets integrations.",
  "type": "module",
  "module": "./src/index.ts",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && bun build ./src/index.ts --outdir dist --target node --format esm --external bun",
    "types": "tsc -p tsconfig.build.json",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "dev": "bun --hot ./index.ts"
  },
  "keywords": [
    "bridge",
    "sdk",
    "base",
    "cross-chain",
    "defi"
  ],
  "author": "Base Markets",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "typescript": "^5.5.0"
  }
}
